<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CommentPFP"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ashorthike"
        app:civ_circle_background_color="@color/offwhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/CommentMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_more_horiz_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CommentUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Username"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/CommentPFP"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CommentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Comment"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/CommentPFP"
        app:layout_constraintTop_toBottomOf="@+id/CommentPFP" />

    <TextView
        android:id="@+id/CommentSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Date"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/CommentPFP"
        app:layout_constraintTop_toBottomOf="@id/CommentText" />


</androidx.constraintlayout.widget.ConstraintLayout>