<?xml version="1.0" encoding="utf-8"?>

<!--Added ScrollView to scroll the screen-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hawkerbackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HCChosenStall">

        <TextView
            android:id="@+id/chosenstallname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/chosenstallimg"
            android:layout_width="378dp"
            android:layout_height="196dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="#E91E63"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chosenstallname"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/hccuserpfp"
            android:layout_width="66dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:scaleType="centerCrop"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chosenstallimg"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/hccusername"
            android:layout_width="106dp"
            android:layout_height="69dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/hccuserpfp"
            app:layout_constraintTop_toTopOf="@+id/hccuserpfp" />

        <TextView
            android:id="@+id/hccparagraph"
            android:layout_width="363dp"
            android:layout_height="111dp"
            android:layout_marginTop="15dp"
            android:paddingStart="20dp"
            android:paddingRight="20dp"
            android:text="שורה של עברית אחד של עברית אחד של עברית אחד של עברית v v אחד של עברית v אחד שלImage at bottom is placeholder עברית של עברית אחד של עברית אחד של עברית אחד של עברית אחד של עברית אחד של עברית v אחד של עברית"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptiontv" />

        <TextView
            android:id="@+id/openinghourtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="Opening Hours"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hccparagraph" />

        <!--Added Table-->
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="368dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/openinghourtv">

            <TableRow android:background="#EF5151">

                <TextView
                    android:id="@+id/hccdays"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Days"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hcchours"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Hours"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:background="#EF5151">

                <TextView
                    android:id="@+id/hccopendays"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Days"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hccopenhours"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Hours"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/addresstv"
            android:layout_width="75dp"
            android:layout_height="22dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="Address"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chosenstallimg" />

        <TextView
            android:id="@+id/hccaddress"
            android:layout_width="172dp"
            android:layout_height="38dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="6dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addresstv" />

        <TextView
            android:id="@+id/descriptiontv"
            android:layout_width="364dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/chosenstallborder"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hccaddress" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>