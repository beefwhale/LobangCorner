<?xml version="1.0" encoding="utf-8"?>

<!--Added ScrollView to scroll the screen-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hawkerbackground"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HCChosenStall">

        <TextView
            android:id="@+id/chosenstallname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:text="Stall name"
            android:textSize="34sp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/chosenstallimg"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chosenstallname"
            app:layout_constraintEnd_toEndOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hccuserpfp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chosenstallimg" />

        <TextView
            android:id="@+id/hccusername"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="username"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toEndOf="@+id/hccuserpfp"
            app:layout_constraintTop_toTopOf="@+id/hccuserpfp" />

        <TextView
            android:id="@+id/descriptiontv"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:text="About"
            android:textAlignment="center"
            android:textSize="28sp"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@drawable/chosenstallborder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hccuserpfp"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/hccparagraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="20dp"
            android:paddingRight="20dp"
            android:text="Full description placeholder"
            android:textAlignment="center"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptiontv"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/addresstv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Address"
            android:textStyle="italic"
            android:textSize="24sp"
            android:gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@drawable/chosenstallborder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hccparagraph"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/hccaddress"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addresstv"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--Added Table-->

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/hctableborder"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hccaddress"
            app:layout_constraintEnd_toEndOf="parent">

            <TableRow android:background="@drawable/hctableborder">
                <TextView
                    android:id="@+id/openingtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Opening Hours"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/montserrat_semibold"
                    android:background="@drawable/hctableborder" />
            </TableRow>

            <TableRow android:background="@drawable/hctableborder">
                <TextView
                    android:id="@+id/hccdays"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="0"
                    android:padding="10sp"
                    android:text="Day(s)"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/montserrat_semibold"
                    android:background="@drawable/hctableborder" />

                <TextView
                    android:id="@+id/hcchours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="1"
                    android:padding="10sp"
                    android:text="Hour(s)"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/montserrat_semibold"
                    android:background="@drawable/hctableborder" />
            </TableRow>

            <TableRow android:background="@drawable/hctableborder">
                <TextView
                    android:id="@+id/hccopendays"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="0"
                    android:padding="10sp"
                    android:text="None found"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/montserrat_regular"
                    android:background="@drawable/hctableborder" />

                <TextView
                    android:id="@+id/hccopenhours"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_column="1"
                    android:padding="10sp"
                    android:text="None found"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/montserrat_regular"
                    android:background="@drawable/hctableborder" />
            </TableRow>
        </TableLayout>

        <!--Added space so that plus button would not block table-->
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>