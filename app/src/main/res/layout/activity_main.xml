<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/MainFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconSize="30dp"
        android:tint="@color/Main_Primary"/>

    // MAIN Floating Action Button (FAB)
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_main_nav_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="#000000"
        android:animateLayoutChanges="true"
        android:outlineAmbientShadowColor="@color/black"
        android:src = "@drawable/add"
        android:tint="@color/Main_Primary"/>

    // SUB Floating Action Button (FAB) : Hawker Corner

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_hc_nav_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_hawker_fab"
        android:tint="@color/white"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/floating_main_nav_button"
        app:layout_constraintEnd_toEndOf="@+id/floating_main_nav_button"
        app:layout_constraintStart_toStartOf="@+id/floating_main_nav_button" />

    // SUB Floating Action Button (FAB) : Recipe Corner

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_rc_nav_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:focusable="true"
        android:src="@drawable/ic_recipe_fab"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/floating_hc_nav_button"
        app:layout_constraintEnd_toEndOf="@+id/floating_hc_nav_button"
        app:layout_constraintStart_toStartOf="@+id/floating_hc_nav_button" />

    // SUB Floating Action Button (FAB) : Recipe Corner Text
    <TextView
        android:id="@+id/floating_rc_nav_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Create Recipe Post"
        app:layout_constraintBottom_toBottomOf="@+id/floating_rc_nav_button"
        app:layout_constraintEnd_toStartOf="@+id/floating_rc_nav_button"
        app:layout_constraintTop_toTopOf="@+id/floating_rc_nav_button"
        android:backgroundTint="@color/black"
        />
    // SUB Floating Action Button (FAB) : Hawker Corner Text
    <TextView
        android:id="@+id/floating_hc_nav_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Create Hawker Post"
        app:layout_constraintBottom_toBottomOf="@+id/floating_hc_nav_button"
        app:layout_constraintEnd_toStartOf="@+id/floating_hc_nav_button"
        app:layout_constraintTop_toTopOf="@+id/floating_hc_nav_button"
        android:backgroundTint="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>


