<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lp_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/feed_img"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ashorthike" />

    <TextView
        android:id="@+id/feed_header"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text=" Title Sample"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/feed_img"
        app:layout_constraintTop_toTopOf="@+id/feed_img" />

    <TextView
        android:id="@+id/feed_desc"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:text="description sample"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/feed_img"
        app:layout_constraintTop_toBottomOf="@+id/feed_header" />

    <TextView
        android:id="@+id/feed_author"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_home_text"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:text="author "
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/feed_img"
        app:layout_constraintEnd_toEndOf="@+id/feed_img"
        app:layout_constraintTop_toBottomOf="@+id/feed_desc"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>