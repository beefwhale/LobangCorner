<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lp_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Latest Posts"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tp_rv"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="#DCDCDC"
        app:layout_constraintBottom_toTopOf="@+id/lp_header"
        app:layout_constraintTop_toBottomOf="@+id/tp_rv"
        tools:layout_editor_absoluteX="34dp" />

    <TextView
        android:id="@+id/wklyfeat_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This Week's Feature!"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/wklyfeat_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wklyfeat_header"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ashorthike"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wklyfeat_header"
        app:srcCompat="@drawable/ashorthike" />

    <TextView
        android:id="@+id/tp_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wklyfeat_img"
        android:layout_marginTop="8dp"
        android:text="Top Posts"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wklyfeat_img" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tp_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tp_header"
        android:nestedScrollingEnabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tp_header" />

</androidx.constraintlayout.widget.ConstraintLayout>